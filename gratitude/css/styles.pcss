:root {
	--banner-color-primary: #40ad90;
	--banner-color-primary-dark: #105277;
	--banner-color-primary-darker: #0d4260;
	--banner-color-white: #ffffff;
}

/*
 Common rules, mobile-first
 */

@media ( min-width: 320px ) {
  .author-banner {
    z-index: 101;
    width: 100%;
    background-color: var( --banner-color-primary );
  /*overflow: hidden;*/
    height: 140px;
    &-container {
    /*height: 280px;*/
    }
    &-inner {
      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
      padding: 20px;
      color: var( --banner-color-white );
    }
    &-image-ltr {
      align-self: flex-end;
      z-index: 0;
      &-inner {
        background: transparent url( '//upload.wikimedia.org/wikipedia/commons/0/0a/Hand%2C_bar_and_pie_chart%2C_light.png' ) no-repeat center center;
        width: 110px;
        height: 100px;
        background-size: contain;
      }
    }
  &-title {
    /*width: 100%;*/
    max-height: 75%;
    z-index: 2;
    &-wrapper {
      max-width: 75%;
      /*max-width: 90%;*/
    }
    &-question {
      font-weight: bold;
      font-size: 30px;
			color: var( --banner-color-white );
    }
    &-ask {
      display: flex;
      flex-wrap: wrap;
      font-weight: normal;
      font-size: 25px;
    }
    &-inner {
    }
    &-long {
			font-size: 18px;
		}
  }
  &-button {
    color: var( --banner-color-primary-darker );
    background-color: var( --banner-color-white );
    box-shadow: 2px 2px 10px rgba( 0, 0, 0, 0.25 );
    padding: 12px;
    display: inline-block;
    border-radius: 45px;
    text-align: left;
    margin: 0 0 0 5%;
    float: left;
    font-size: 13px;
    width: 110px;
    &-inner {
      font-weight: bold;
      display: inline-block;
    }
      &:after {
      }
    &-link {
      color: var( --banner-color-white );
			text-decoration: none;
      &:hover,
			&:visited {
				color: var( --banner-color-white );
				text-decoration: none;
			}
    }
    &-wrapper {
      position: absolute;
      top: 80px;
      margin: none;
		}
  }
  &-close {
		position: absolute;
		right: 0.2em;
		top: 0.5em;
		&-button {
			position: relative;
			padding: 0 5px;
			flex: 0 0 auto;
			right: 0;
			top: -3px;
			line-height: 20px;
			font-size: 32px;
			font-weight: bold;
			&:before {
				position: relative;
				content: '\00d7';
				color: var( --banner-color-white );
				float: left;
				height: 100%;
			}
		}
	}
}
}
