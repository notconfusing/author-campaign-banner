/*
 Desktop devices
 */
@media ( min-width: 1200px ) {
  .cn-undefined {
    height: 140px;
  }
  .author-banner {
  	&-inner {
      flex-direction: row;
      justify-content: space-between;
  	}
  	&-title {
      position: absolute;
      font-weight: bold;
      z-index: 1;
      &-wrapper {
        max-width: 75%;
      }
      &-ask {
        font-size: 25px;
      }
  		&-inner {

  		}
  		&-long {
  		}
  		&-question {
        font-size: 33px;
  		}
  	}
  	&-image-ltr {
      z-index: 0;
      position: relative;
      left: 45%;
      top: auto;
  		&-inner {
        width: 500px;
        height: 140px;
        position: relative;
        top: -30px;
  		}
  	}
  	&-button {
      color: var( --banner-color-primary-darker );
  		background-color: var( --banner-color-white );
  		box-shadow: 2px 2px 10px rgba( 0, 0, 0, 0.25 );
      padding: 20px 25px;
  		border-radius: 45px;
  		margin: 0 0 0 5%;
  		font-size: 23px;
      width: 200px;
      &-wrapper {
        position: absolute;
        margin-top: 35px;
        margin-right: 100px;
        top: 0;
        right: 0;
        z-index: 1;
      }
  		&-inner {
        font-weight: bold;
  			display: inline-block;
  			&:after {
  			}
  		}
  		&-link {
        color: var( --banner-color-white );
  			text-decoration: none;
  			&:hover,
  			&:visited {
  				color: var( --banner-color-white );
  				text-decoration: none;
  			}
  		}
  		&-wrapper {
  		}
  	}
  	&-close {

  		&-button {

  			&:before {

  			}
  		}
  	}
  }
}

