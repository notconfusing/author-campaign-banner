/*
 Desktop devices
 */
@media ( min-width: 1200px ) {
  .author-banner {
    height: 150px;
    &-inner {
      flex-direction: row;
      justify-content: space-between;
    }
    &-title {
      position: absolute;
      font-weight: bold;
      z-index: 1;
      &-wrapper {
        max-width: 75%;
      }
      &-ask {
        font-size: 25px;
      }
      &-inner {

      }
      &-long {
      }
      &-question {
        font-size: 33px;
      }
    }
    &-image-ltr {
      z-index: 0;
      position: relative;
      left: 45%;
      top: -15px;
      &-inner {
        width: 500px;
        height: 140px;
        position: relative;
      }
    }
    &-button {
      font-size: 23px;
      width: 300px;
      &-wrapper {
        position: absolute;
        margin-top: 35px;
        margin-right: 50px;
        top: 0;
        right: 0;
        z-index: 1;
      }
      &-inner {
        font-weight: bold;
        display: inline-block;
        &:after {
        }
      }
      &-link {
        color: var(--banner-color-white);
        text-decoration: none;
        &:hover,
        &:visited {
          color: var(--banner-color-white);
          text-decoration: none;
        }
      }
      &-wrapper {
      }
    }
    &-close {

      &-button {

        &:before {

        }
      }
    }
  }
}

